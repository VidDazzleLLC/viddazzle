{
  "version": "1.0.0",
  "tools": [
    {
      "name": "file_read",
      "description": "Read contents of a file from the filesystem",
      "category": "filesystem",
      "input_schema": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "Path to the file to read"
          }
        },
        "required": ["path"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string",
            "description": "File contents"
          },
          "size": {
            "type": "number",
            "description": "File size in bytes"
          }
        }
      }
    },
    {
      "name": "file_write",
      "description": "Write content to a file on the filesystem",
      "category": "filesystem",
      "input_schema": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "Path to the file to write"
          },
          "content": {
            "type": "string",
            "description": "Content to write to the file"
          }
        },
        "required": ["path", "content"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "bytes_written": {
            "type": "number"
          }
        }
      }
    },
    {
      "name": "execute_code",
      "description": "Execute code in a sandboxed environment",
      "category": "execution",
      "input_schema": {
        "type": "object",
        "properties": {
          "language": {
            "type": "string",
            "enum": ["python", "javascript", "bash"],
            "description": "Programming language to execute"
          },
          "code": {
            "type": "string",
            "description": "Code to execute"
          },
          "timeout": {
            "type": "number",
            "description": "Execution timeout in milliseconds",
            "default": 30000
          }
        },
        "required": ["language", "code"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "stdout": {
            "type": "string"
          },
          "stderr": {
            "type": "string"
          },
          "exit_code": {
            "type": "number"
          },
          "execution_time": {
            "type": "number"
          }
        }
      }
    },
    {
      "name": "http_request",
      "description": "Make HTTP requests to external APIs",
      "category": "network",
      "input_schema": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "description": "URL to request"
          },
          "method": {
            "type": "string",
            "enum": ["GET", "POST", "PUT", "DELETE", "PATCH"],
            "default": "GET"
          },
          "headers": {
            "type": "object",
            "description": "HTTP headers"
          },
          "body": {
            "type": "object",
            "description": "Request body for POST/PUT/PATCH"
          }
        },
        "required": ["url"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "status": {
            "type": "number"
          },
          "headers": {
            "type": "object"
          },
          "body": {
            "type": "object"
          }
        }
      }
    },
    {
      "name": "database_query",
      "description": "Execute SQL queries against the Supabase database",
      "category": "database",
      "input_schema": {
        "type": "object",
        "properties": {
          "table": {
            "type": "string",
            "description": "Table name to query"
          },
          "operation": {
            "type": "string",
            "enum": ["select", "insert", "update", "delete"],
            "description": "Database operation"
          },
          "filter": {
            "type": "object",
            "description": "Filter conditions"
          },
          "data": {
            "type": "object",
            "description": "Data for insert/update operations"
          }
        },
        "required": ["table", "operation"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array"
          },
          "count": {
            "type": "number"
          },
          "error": {
            "type": "string"
          }
        }
      }
    },
    {
      "name": "vector_search",
      "description": "Search tutorial embeddings using vector similarity",
      "category": "ai",
      "input_schema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query text"
          },
          "match_count": {
            "type": "number",
            "description": "Number of results to return",
            "default": 5
          },
          "match_threshold": {
            "type": "number",
            "description": "Similarity threshold (0-1)",
            "default": 0.7
          }
        },
        "required": ["query"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "results": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "content": {
                  "type": "string"
                },
                "similarity": {
                  "type": "number"
                },
                "metadata": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "email_send",
      "description": "Send email notifications",
      "category": "communication",
      "input_schema": {
        "type": "object",
        "properties": {
          "to": {
            "type": "string",
            "description": "Recipient email address"
          },
          "subject": {
            "type": "string",
            "description": "Email subject"
          },
          "body": {
            "type": "string",
            "description": "Email body (HTML or plain text)"
          },
          "html": {
            "type": "boolean",
            "description": "Whether body is HTML",
            "default": false
          }
        },
        "required": ["to", "subject", "body"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message_id": {
            "type": "string"
          }
        }
      }
    },
    {
      "name": "slack_message",
      "description": "Send messages to Slack channels",
      "category": "communication",
      "input_schema": {
        "type": "object",
        "properties": {
          "channel": {
            "type": "string",
            "description": "Slack channel ID or name"
          },
          "text": {
            "type": "string",
            "description": "Message text"
          },
          "blocks": {
            "type": "array",
            "description": "Slack Block Kit blocks"
          }
        },
        "required": ["channel", "text"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "ts": {
            "type": "string",
            "description": "Message timestamp"
          }
        }
      }
    },
    {
      "name": "calendar_event",
      "description": "Create calendar events",
      "category": "productivity",
      "input_schema": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Event title"
          },
          "start_time": {
            "type": "string",
            "description": "ISO 8601 start time"
          },
          "end_time": {
            "type": "string",
            "description": "ISO 8601 end time"
          },
          "description": {
            "type": "string",
            "description": "Event description"
          },
          "attendees": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Attendee email addresses"
          }
        },
        "required": ["title", "start_time", "end_time"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "event_id": {
            "type": "string"
          }
        }
      }
    },
    {
      "name": "web_scrape",
      "description": "Scrape content from web pages",
      "category": "network",
      "input_schema": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "description": "URL to scrape"
          },
          "selector": {
            "type": "string",
            "description": "CSS selector for content extraction"
          },
          "wait_for": {
            "type": "string",
            "description": "CSS selector to wait for before scraping"
          }
        },
        "required": ["url"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string"
          },
          "html": {
            "type": "string"
          }
        }
      }
    },
    {
      "name": "transform_data",
      "description": "Transform data using JSONPath or similar operations",
      "category": "data",
      "input_schema": {
        "type": "object",
        "properties": {
          "data": {
            "type": "object",
            "description": "Input data to transform"
          },
          "operations": {
            "type": "array",
            "description": "Array of transformation operations",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["extract", "map", "filter", "reduce", "merge"]
                },
                "path": {
                  "type": "string"
                },
                "value": {
                  "type": "string"
                }
              }
            }
          }
        },
        "required": ["data", "operations"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "result": {
            "type": "object"
          }
        }
      }
    },
    {
      "name": "conditional_branch",
      "description": "Conditional execution based on a condition",
      "category": "control",
      "input_schema": {
        "type": "object",
        "properties": {
          "condition": {
            "type": "string",
            "description": "Condition to evaluate (JavaScript expression)"
          },
          "context": {
            "type": "object",
            "description": "Variables available in condition"
          }
        },
        "required": ["condition"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "result": {
            "type": "boolean"
          },
          "branch": {
            "type": "string",
            "enum": ["true", "false"]
          }
        }
      }
    },
    {
      "name": "loop_iteration",
      "description": "Loop over a collection of items",
      "category": "control",
      "input_schema": {
        "type": "object",
        "properties": {
          "items": {
            "type": "array",
            "description": "Items to iterate over"
          },
          "max_iterations": {
            "type": "number",
            "description": "Maximum number of iterations",
            "default": 100
          }
        },
        "required": ["items"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "iterations": {
            "type": "number"
          },
          "results": {
            "type": "array"
          }
        }
      }
    },
    {
      "name": "wait_delay",
      "description": "Wait for a specified duration",
      "category": "control",
      "input_schema": {
        "type": "object",
        "properties": {
          "duration": {
            "type": "number",
            "description": "Duration to wait in milliseconds"
          }
        },
        "required": ["duration"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "waited": {
            "type": "number"
          }
        }
      }
    }
  ],
  "categories": {
    "filesystem": {
      "name": "File System",
      "description": "Tools for reading and writing files"
    },
    "execution": {
      "name": "Code Execution",
      "description": "Tools for executing code in various languages"
    },
    "network": {
      "name": "Network",
      "description": "Tools for making HTTP requests and web scraping"
    },
    "database": {
      "name": "Database",
      "description": "Tools for database operations"
    },
    "ai": {
      "name": "AI & ML",
      "description": "Tools for AI and machine learning operations"
    },
    "communication": {
      "name": "Communication",
      "description": "Tools for sending emails, messages, etc."
    },
    "productivity": {
      "name": "Productivity",
      "description": "Tools for calendar, tasks, etc."
    },
    "data": {
      "name": "Data Transformation",
      "description": "Tools for transforming and manipulating data"
    },
    "control": {
      "name": "Control Flow",
      "description": "Tools for controlling workflow execution"
    }
  }
}
