      "output_schema": {
        "type": "object",
        "properties": {
          "results": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "content": {
                  "type": "string"
                },
                "similarity": {
                  "type": "number"
                },
                "metadata": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
